{% extends "layouts/base.njk" %}

{% block content %}
<div class="container mx-auto px-4">
  <article class="prose lg:prose-xl mx-auto max-w-4xl py-8">
    <header class="mb-8">
      <h1 class="text-primary-blue text-4xl font-bold">{{ title }}</h1>
      <div class="flex flex-col gap-2 text-sm text-gray-500">
        <time datetime="{{ date | date('yyyy-MM-dd') }}">{{ date | date("MMMM d, yyyy") }}</time>
        <p class="text-primary-blue">
          Tags: 
          {% for tag in tags %}
            <a href="/tags/{{ tag }}" class="mr-1 bg-gray-800 px-2 py-1 rounded text-white text-xs hover:bg-gray-700">{{ tag }}</a>
          {% endfor %}
        </p>
      </div>
    </header>

    <div>
      {{ content | safe }}
    </div>

    <footer class="mt-12 pt-4 border-t border-gray-200">
      <nav class="flex justify-between items-center">
        {% if collections.blog %}
          {% set previousPost = (collections.blog | reverse | getPreviousCollectionItem(page)) %}
          {% set nextPost = (collections.blog | reverse | getNextCollectionItem(page)) %}
          
          <div class="w-1/3 flex flex-col">
            {% if previousPost %}
              <a href="{{ previousPost.url }}" class="text-primary-blue hover:underline">&larr; Previous Post</a>
            {% else %}
              <span></span>
            {% endif %}
          </div>
          
          <div class="w-1/3 flex justify-center">
            <a href="/blog" class="text-primary-blue hover:underline">Back to Blog</a>
          </div>

          <div class="w-1/3 flex flex-col items-end">
            {% if nextPost %}
              <a href="{{ nextPost.url }}" class="text-primary-blue hover:underline">Next Post &rarr;</a>
            {% else %}
              <span></span>
            {% endif %}
          </div>
        {% else %}
          <div class="w-1/3"></div>
          <div class="w-1/3 flex justify-center">
            <a href="/blog" class="text-primary-blue hover:underline">Back to Blog</a>
          </div>
          <div class="w-1/3"></div>
        {% endif %}
      </nav>
    </footer>
  </article>
</div>
{% endblock %}