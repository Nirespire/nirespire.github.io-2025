{
  "name": "nirespire.github.io",
  "version": "1.0.0",
  "description": "Sanjay Nair personal website",
  "author": "Sanjay Nair <email@sanjaynair.dev>",
  "main": "index.js",
  "engines": {
    "node": "^22.14.0"
  },
  "scripts": {
    "start": "npx eleventy --serve",
    "build:css": "npx tailwindcss -i ./src/assets/css/styles.css -o ./src/assets/css/tailwind-built.css --minify",
    "build:worker": "node scripts/build-worker.js",
    "build": "npm run build:css && npm run build:worker && npx eleventy",
    "build:watch": "npx eleventy --watch",
    "watch:css": "npx tailwindcss -i ./src/assets/css/styles.css -o ./src/assets/css/tailwind-built.css --watch",
    "dev:worker": "wrangler pages dev --log-level=debug",
    "dev": "npm run build && concurrently \"npm:build:watch\" \"npm:watch:css\" \"npm:dev:worker\"",
    "test": "playwright test",
    "test:setup": "npx playwright install --with-deps",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "check-links": "node scripts/check-links.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.62.0",
    "gray-matter": "^4.0.3",
    "luxon": "^3.6.1",
    "markdown-it": "^14.1.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^2.0.3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.13",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.6",
    "dotenv": "^16.5.0",
    "glob": "^13.0.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "wrangler": "^4.54.0"
  },
  "license": "MIT"
}
